{
   "name": "dna.js",
   "version": "2.0.3",
   "description": "An uncomplicated user interface library for building data-driven semantic templates (written in TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/dna.js",
   "jsdelivr": "dist/dna.min.js",
   "main": "dist/dna.umd.cjs",
   "style": "dist/dna.css",
   "types": "dist/dna.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/dna.js",
         "require": "./dist/dna.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:dnajs/dna.js",
   "homepage": "https://dnajs.org",
   "bugs": "https://github.com/dnajs/dna.js/issues",
   "docs": "https://dnajs.org/docs",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "clone",
      "dom",
      "engine",
      "html",
      "jamstack",
      "jquery",
      "json",
      "template",
      "templating",
      "typescript",
      "ui"
   ],
   "meta": {
      "summary": "dna.js is a lightweight easy-to-use UI library enabling developers to rapidly build maintainable JavaScript applications."
   },
   "jshintConfig": {
      "esversion": 10,
      "strict": "implied",
      "eqeqeq": true,
      "singleGroups": true,
      "nonbsp": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "mocha": true,
      "node": true,
      "globals": {
         "$": true,
         "dna": true,
         "globalThis": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "websiteInfo": {
      "cdn": {
         "fontAwesome": "6.2",
         "highlightjs": "11.6"
      },
      "gzipSize": "9 kb gzip",
      "jsFiddle": {
         "addABook": "Lv4pjt0g",
         "bookFinder": "r8hwk0Lq",
         "dataClick": "50gwncj3",
         "liveModel": "xez27s0o",
         "panelsClick": "m7b9h53a",
         "panelsDropDown": "rdjb6cka",
         "photoUpload": "o5p0wjd1",
         "smartUpdates": "a5rsLcb2",
         "toDo": "3qbkjguy"
      },
      "youTube": {
         "intro": "jMOZOI-UkNI",
         "jquery": "UU-GebNqdbg",
         "tutorial": "juIru5qHZFM"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 src --ext .ts",
      "step:10": "tsc",
      "step:11": "tsc --module UMD --outDir build/umd",
      "step:12": "copy-file build/umd/dna.js build/dna.umd.cjs",
      "step:13": "copy-file src/dna.css --folder build",
      "step:14": "copy-file website/static/panel-nav.css --folder build",
      "step:15": "esm-to-plain-js --cd=build dna.js dna.dev.js",
      "step:16": "uglifyjs build/dna.dev.js --output build/dna.min.js",
      "step:20": "add-dist-header build dist",
      "step:30": "copy-file spec/visual.html spec/visual.min.html",
      "step:31": "replace-in-file /dist/dna.dev.js /dist/dna.min.js spec/visual.min.html",
      "step:32": "html-validator spec",
      "pretest": "npm-run-all step:*",
      "dev:01": "tsc --watch",
      "dev:02": "chokidar 'src/dna.ts' --command 'src/eslint dna.ts'",
      "dev:03": "chokidar 'build/dna.js' --command 'npm run step:10'",
      "dev:04": "browser-sync . --startPath spec/visual.html --files dist spec",
      "web:01": "rimraf website-target",
      "web:02": "copy-folder website/static website-target",
      "web:03": "files-replace website/static --ext=.html website-target --pkg",
      "web:04": "files-replace website/root --ext=.html website-target --pkg",
      "web:05": "files-replace spec --ext=.html website-target --find='../dist/' --replacement='https://cdn.jsdelivr.net/npm/dna.js@{{pkg.version|minor-version}}/dist/' --pkg",
      "web:06": "html-validator website-target",
      "web:07": "copy-file website-target/project.html docs/index.html",
      "test": "mocha spec/*.spec.js",
      "dev": "npm test && npm-run-all --parallel dev:*",
      "build-website": "npm-run-all web:*"
   },
   "peerDependencies": {
      "jquery": ">=3.5"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/jquery": "~3.5",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.39",
      "@typescript-eslint/parser": "~5.39",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "browser-sync": "~2.27",
      "canvas": "~2.10",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~0.1",
      "copy-folder-cli": "~0.1",
      "eslint": "~8.25",
      "esm-to-plain-js": "~0.0",
      "fetch-json": "~2.6",
      "files-replace": "~0.1",
      "highlight.js": "~11.6",
      "hljs-enhance": "~1.0",
      "jquery": "~3.6",
      "jsdom": "~20.0",
      "jshint": "~2.13",
      "merge-stream": "~2.0",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "puppeteer": "~18.2",
      "puppeteer-browser-ready": "~0.5",
      "replace-in-file": "~6.3",
      "rimraf": "~3.0",
      "serve": "~14.0",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.1",
      "web-ignition": "~1.5"
   }
}
